{
  "name": "marinnote",
  "title": "MarginNote",
  "description": "Search notebook within the MarginNote",
  "icon": "marginnote.png",
  "author": "MarginNote",
  "contributors": [
    "ourongxing"
  ],
  "license": "MIT",
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix"
  },
  "preferences": [
    {
      "name": "skipAlert",
      "description": "Skip the unsigned addon alert when open MarginNote",
      "type": "checkbox",
      "label": "Skip Alert",
      "required": false,
      "default": false
    },
    {
      "name": "waitingTime",
      "title": "Waiting Time",
      "description": "Waiting time, if you need to skip the unsigned addon alert",
      "type": "dropdown",
      "data": [
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5",
          "value": "5"
        },
        {
          "title": "6",
          "value": "6"
        }
      ],
      "required": false,
      "default": "3"
    }
  ],
  "commands": [
    {
      "name": "searchNotebook",
      "title": "Search Notebook",
      "subtitle": "MarginNote",
      "description": "Search notebook in MarginNote",
      "mode": "view"
    },
    {
      "name": "importDoc",
      "title": "Import Document",
      "subtitle": "MarginNote",
      "description": "Import document to MarginNote fastly",
      "mode": "view",
      "preferences": [
        {
          "name": "folderDepth",
          "title": "Matched Folder Depth",
          "description": "Too deep will slow down",
          "type": "dropdown",
          "data": [
            {
              "title": "2",
              "value": "2"
            },
            {
              "title": "3",
              "value": "3"
            },
            {
              "title": "4",
              "value": "4"
            },
            {
              "title": "5",
              "value": "5"
            },
            {
              "title": "6",
              "value": "6"
            }
          ],
          "required": false,
          "default": "5"
        },
        {
          "name": "ignorePattern",
          "title": "Ignore Pattern",
          "description": "A glob pattern to exclude matches",
          "type": "textfield",
          "required": false,
          "placeholder": "**/*.app/**/*"
        }
      ]
    },
    {
      "name": "restart",
      "title": "Restart MarginNote",
      "subtitle": "MarginNote",
      "description": "Restart marginote and ignore alert",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "run-applescript": "^6.0.0",
    "sql.js": "^1.7.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "~18.7.8",
    "@types/react": "^18.0.17",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "2.7.1",
    "react-devtools": "^4.25.0",
    "typescript": "^4.7.4"
  }
}